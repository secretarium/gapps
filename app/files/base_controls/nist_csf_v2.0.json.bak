    {
        "name": "Organisational Context",
        "ref_code": "GV.OC",
        "category": "Govern (GV)",
        "subcontrols": [
            {
                "ref_code": "GV.OC-01",
                "name": "The organisational mission is understood and informs cybersecurity risk management",
                "description": "The organisational mission is understood and informs cybersecurity risk management",
                "guidance": "Align cybersecurity efforts with your organization's core mission and goals.  Prioritize protecting data essential to fulfilling your mission.  Regularly assess how cyber threats could impede your mission objectives.  Use this understanding to guide security decisions and resource allocation. This ensures cybersecurity supports your overall success.\n"
            },
            {
                "ref_code": "GV.OC-02",
                "name": "Internal and external stakeholders are understood, and their needs and expectations regarding cybersecurity risk management are understood and considered",
                "description": "Internal and external stakeholders are understood, and their needs and expectations regarding cybersecurity risk management are understood and considered",
                "guidance": "Identify and define all stakeholders (internal departments, external partners, patients). Determine their specific cybersecurity risk needs and expectations. Analyze how these needs impact your organization's security program. Address stakeholder concerns by implementing appropriate security measures. Regularly communicate and update stakeholders on security posture.\n"
            },
            {
                "ref_code": "GV.OC-03",
                "name": "Legal, regulatory, and contractual requirements regarding cybersecurity \u2014 including privacy and civil liberties obligations \u2014 are understood and managed",
                "description": "Legal, regulatory, and contractual requirements regarding cybersecurity \u2014 including privacy and civil liberties obligations \u2014 are understood and managed",
                "guidance": "Ensure your organization understands all relevant cybersecurity laws, regulations (like HIPAA!), and contracts.  Document these requirements and how they apply to your systems and data. Develop and implement policies and procedures to comply with these obligations. Regularly review and update these practices as laws and agreements evolve.  Training staff on these requirements is also critical.\n"
            },
            {
                "ref_code": "GV.OC-04",
                "name": "Critical objectives, capabilities, and services that external stakeholders depend on or expect from the organisation are understood and communicated",
                "description": "Critical objectives, capabilities, and services that external stakeholders depend on or expect from the organisation are understood and communicated",
                "guidance": "This HIPAA security control focuses on transparency with external partners.  Identify and clearly communicate essential services and expectations that external stakeholders rely on.  Document these dependencies and share them with the appropriate parties. This helps ensure consistent and reliable service delivery and reduces misunderstandings.  Proactive communication strengthens relationships and maintains trust.\n"
            },
            {
                "ref_code": "GV.OC-05",
                "name": "Outcomes, capabilities, and services that the organisation depends on are understood and communicated",
                "description": "Outcomes, capabilities, and services that the organisation depends on are understood and communicated",
                "guidance": "This HIPAA security control focuses on understanding your organization's critical dependencies.  Identify key vendors, technologies, and services supporting protected health information (PHI).  Clearly document these dependencies and their importance.  Ensure internal stakeholders understand how these dependencies impact your overall security posture and service delivery.  Regularly review and update this information.\n"
            }
        ]
    },
    {
        "name": "Risk Management Strategy",
        "ref_code": "GV.RM",
        "category": "Govern (GV)",
        "subcontrols": [
            {
                "ref_code": "GV.RM-01",
                "name": "Risk management objectives are established and agreed to by organisational stakeholders",
                "description": "Risk management objectives are established and agreed to by organisational stakeholders",
                "guidance": "Define clear, measurable risk management objectives.  Involve key stakeholders from various departments in their development.  Ensure objectives align with overall organizational goals and HIPAA compliance. Regularly review and update these objectives as risks and priorities change.  Document stakeholder agreement to formalize the process.\n"
            },
            {
                "ref_code": "GV.RM-02",
                "name": "Risk appetite and risk tolerance statements are established, communicated, and maintained",
                "description": "Risk appetite and risk tolerance statements are established, communicated, and maintained",
                "guidance": "Establish clear statements defining the organization's risk appetite (how much risk it's willing to accept) and risk tolerance (acceptable variation). Communicate these statements widely to relevant personnel. Regularly review and update the statements to reflect changing business needs and threats. This ensures consistent decision-making regarding security measures. Maintain documentation of these statements and revisions.\n"
            },
            {
                "ref_code": "GV.RM-03",
                "name": "Cybersecurity risk management activities and outcomes are included in enterprise risk management processes",
                "description": "Cybersecurity risk management activities and outcomes are included in enterprise risk management processes",
                "guidance": "Integrate cybersecurity risk management into overall business risk management.  This ensures consistent evaluation of security risks alongside other business threats.  Document cybersecurity risk assessments and mitigation plans within the enterprise risk framework. Regularly review and update these plans to reflect changes in the threat landscape.  Report cybersecurity risk outcomes to leadership, informing decisions about resource allocation and strategic planning.\n"
            },
            {
                "ref_code": "GV.RM-04",
                "name": "Strategic direction that describes appropriate risk response options is established and communicated",
                "description": "Strategic direction that describes appropriate risk response options is established and communicated",
                "guidance": "This HIPAA control mandates clear risk response strategies.  Define how your organization will address identified risks.  Communicate these plans effectively to all relevant personnel.  This ensures consistent and appropriate actions are taken when security risks arise.  Document your strategic direction.\n"
            },
            {
                "ref_code": "GV.RM-05",
                "name": "Lines of communication across the organisation are established for cybersecurity risks, including risks from suppliers and other third parties",
                "description": "Lines of communication across the organisation are established for cybersecurity risks, including risks from suppliers and other third parties",
                "guidance": "Establish clear communication channels to report and address cybersecurity risks.  These channels should extend to all staff levels and include third-party suppliers.  Ensure regular communication and updates regarding potential threats and vulnerabilities. Document the communication process and response procedures for reference.  This helps to facilitate prompt action and coordinated response to protect patient information.\n"
            },
            {
                "ref_code": "GV.RM-06",
                "name": "A standardised method for calculating, documenting, categorising, and prioritising cybersecurity risks is established and communicated",
                "description": "A standardised method for calculating, documenting, categorising, and prioritising cybersecurity risks is established and communicated",
                "guidance": "Establish a consistent risk assessment methodology. Document and categorize identified risks based on likelihood and impact. Prioritize risks based on their potential harm to protected health information. Communicate the methodology and risk rankings to relevant stakeholders. Regularly reassess risks to adapt to evolving threats.\n"
            },
            {
                "ref_code": "GV.RM-07",
                "name": "Strategic opportunities (i.e., positive risks) are characterised and are included in organisational cybersecurity risk discussions",
                "description": "Strategic opportunities (i.e., positive risks) are characterised and are included in organisational cybersecurity risk discussions",
                "guidance": "This HIPAA security control mandates proactive risk analysis. Identify potential cybersecurity benefits (positive risks) alongside vulnerabilities.  Integrate these opportunities into risk assessments and discussions. This ensures a balanced view and informs strategic decisions. Doing so fosters a more resilient and innovative cybersecurity posture.\n"
            }
        ]
    },
    {
        "name": "Roles, Responsibilities, and Authorities",
        "ref_code": "GV.RR",
        "category": "Govern (GV)",
        "subcontrols": [
            {
                "ref_code": "GV.RR-01",
                "name": "Organisational leadership is responsible and accountable for cybersecurity risk and fosters a culture that is risk-aware, ethical, and continually improving",
                "description": "Organisational leadership is responsible and accountable for cybersecurity risk and fosters a culture that is risk-aware, ethical, and continually improving",
                "guidance": "Organizational leaders must own cybersecurity risk, ensuring accountability across the organization.  They should cultivate a risk-aware culture, where ethical behavior is paramount.  This includes prioritizing continuous improvement of security practices and employee training.  Regularly assess and address potential threats to protect patient information.  Leadership's commitment is crucial for successful HIPAA compliance.\n"
            },
            {
                "ref_code": "GV.RR-02",
                "name": "Roles, responsibilities, and authorities related to cybersecurity risk management are established, communicated, understood, and enforced",
                "description": "Roles, responsibilities, and authorities related to cybersecurity risk management are established, communicated, understood, and enforced",
                "guidance": "Define clear cybersecurity roles and responsibilities within your organization. Communicate these roles effectively to all personnel. Ensure everyone understands their security duties and holds them accountable. Regularly enforce these roles through training, audits, and consistent practices. This minimizes risk and ensures HIPAA compliance.\n"
            },
            {
                "ref_code": "GV.RR-03",
                "name": "Adequate resources are allocated commensurate with the cybersecurity risk strategy, roles, responsibilities, and policies",
                "description": "Adequate resources are allocated commensurate with the cybersecurity risk strategy, roles, responsibilities, and policies",
                "guidance": "Ensure sufficient budget, personnel, and tools support your cybersecurity strategy.  Allocate resources based on risk assessments and clearly defined roles.  Regularly review resource allocation to adapt to evolving threats.  Properly resourced security efforts help maintain HIPAA compliance and protect patient data.  Lack of resources can undermine all other security efforts.\n"
            },
            {
                "ref_code": "GV.RR-04",
                "name": "Cybersecurity is included in human resources practices",
                "description": "Cybersecurity is included in human resources practices",
                "guidance": "Integrate cybersecurity awareness into your HR processes. This includes security training for new hires, ongoing awareness programs, and clear policies on acceptable use. Ensure background checks consider cybersecurity risks and that termination procedures address data security. Regularly update these practices to address evolving threats. This holistic approach protects sensitive information.\n"
            }
        ]
    },
    {
        "name": "Policy",
        "ref_code": "GV.PO",
        "category": "Govern (GV)",
        "subcontrols": [
            {
                "ref_code": "GV.PO-01",
                "name": "Policy for managing cybersecurity risks is established based on organisational context, cybersecurity strategy, and priorities and is communicated and enforced",
                "description": "Policy for managing cybersecurity risks is established based on organisational context, cybersecurity strategy, and priorities and is communicated and enforced",
                "guidance": "Develop a clear cybersecurity risk management policy aligned with your organization's specific needs and strategic goals.  The policy should reflect your cybersecurity strategy and rank your priorities.  Communicate this policy to all employees and ensure consistent enforcement.  Regularly review and update the policy to adapt to evolving threats. This proactive approach strengthens overall data security.\n"
            },
            {
                "ref_code": "GV.PO-02",
                "name": "Policy for managing cybersecurity risks is reviewed, updated, communicated, and enforced to reflect changes in requirements, threats, technology, and organisational mission",
                "description": "Policy for managing cybersecurity risks is reviewed, updated, communicated, and enforced to reflect changes in requirements, threats, technology, and organisational mission",
                "guidance": "Regularly reassess your cybersecurity risk policy.  Update it to address new threats, changes in technology, and any shifts in your organization's objectives.  Clearly communicate the revised policy to all relevant personnel.  Enforce the policy consistently, including with disciplinary measures when necessary.  This ensures your organization proactively mitigates evolving risks and maintains HIPAA compliance.\n"
            }
        ]
    },
    {
        "name": "Oversight",
        "ref_code": "GV.OV",
        "category": "Govern (GV)",
        "subcontrols": [
            {
                "ref_code": "GV.OV-01",
                "name": "Cybersecurity risk management strategy outcomes are reviewed to inform and adjust strategy and direction",
                "description": "Cybersecurity risk management strategy outcomes are reviewed to inform and adjust strategy and direction",
                "guidance": "Regularly review your cybersecurity risk management strategy's results. Analyze past performance and identify areas for improvement. Use these insights to modify the strategy's goals and tactics.  Adapt your approach to stay ahead of evolving threats and maintain effective security. This ensures your strategy remains relevant and protects sensitive information.\n"
            },
            {
                "ref_code": "GV.OV-02",
                "name": "The cybersecurity risk management strategy is reviewed and adjusted to ensure coverage of organisational requirements and risks",
                "description": "The cybersecurity risk management strategy is reviewed and adjusted to ensure coverage of organisational requirements and risks",
                "guidance": "Regularly reassess your cybersecurity risk management strategy. Evaluate its effectiveness in addressing current organizational needs and identified risks. Make necessary adjustments to the strategy, policies, and procedures. Document all reviews and modifications. This ensures your strategy remains relevant and protects sensitive information.\n"
            },
            {
                "ref_code": "GV.OV-03",
                "name": "Organisational cybersecurity risk management performance is evaluated and reviewed for adjustments needed",
                "description": "Organisational cybersecurity risk management performance is evaluated and reviewed for adjustments needed",
                "guidance": "Regularly assess your organization's cybersecurity risk management program. Review performance metrics and identified vulnerabilities. Use findings to adjust policies, procedures, and resource allocation. Ensure continuous improvement and alignment with evolving threats. Document all reviews and adjustments.\n"
            }
